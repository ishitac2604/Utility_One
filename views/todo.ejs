<%- include('partials/header') -%>
<section id="todo">
  <div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% newItem.forEach(function(item) { %>
  <form action="todo/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        style="zoom:1.5;"
        onchange="this.form.submit()"
        name="checked"
        value=<%=item._id %>>
      <p><%= item.name %></p>
    </div>
  </form>
  <% }) %>

  <form class="item" action="/todo" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button type="submit" name="list">+</button>
  </form>
</div>


</section>

<%- include('partials/footer') -%>
