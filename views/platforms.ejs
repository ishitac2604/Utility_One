<%- include('partials/header.ejs') -%>
<section id="platforms">
  <div class="container">
    <div class="row">
      <% platforms.forEach(p => {%>
      <div class="col-lg-6">
        <div class="col-lg-12 card">
          <div class="d-flex flex-row align-items-center">
            <img src="<%= p.img %>" alt="" />
            <a href="/platforms/<%=p.code %>"><%= p.name %></a>
          </div>
        </div>
      </div>
      <% })%>
    </div>
  </div>
</section>

<%- include('partials/footer.ejs') -%>
